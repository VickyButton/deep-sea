{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "@assets/*": [
        "./src/assets/*"
      ],
      "@core/*": [
        "./src/core/*"
      ],
      "@nodes/*": [
        "./src/nodes/*"
      ],
      "@scenes/*": [
        "./src/scenes/*"
      ],
      "config": [
        "./src/config"
      ],
      "game": [
        "./src/game"
      ],
    },
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "useUnknownInCatchVariables": true,
    "noEmit": true
  },
  "include": [
    "src",
    "eslint.config.ts",
    "vite.config.ts"
  ]
}